{{>layout/header}}

<div class="container-fluid">
    <form onsubmit="return false;">
        <div class="form-group">
            <label for="inputTitle">제목</label>
            <input type="text" class="form-control" id="inputTitle" aria-describedby="titleHelp">
            <small id="titleHelp" class="form-text text-muted">제목을 입력하세요~</small>
        </div>
        <div class="form-group">
            <label for="inputAuthor">작성자</label>
            <input type="email" class="form-control" id="inputAuthor">
        </div>
        <div class="form-group">
            <label for="inputContent">내용</label>
            <textarea class="form-control" id="inputContent"></textarea>
        </div>
        <button type="button" class="btn btn-primary" id="btn-save">등록</button>
        <a href="/board" role="button" class="btn btn-secondary">취소</a>
    </form>
</div>
{{>layout/footer}}
