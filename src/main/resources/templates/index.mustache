{{>layout/header}}
<link rel="stylesheet" href="/css/signin.css" />
<div class="body text-center">
    <form class="form-signin">

        {{#user}}
            <img class="mb-4" src="{{picture}}" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Welcome {{email}}</h1>
            <a href="/logout" class="btn btn-lg btn-primary btn-block">로그아웃</a>
            <a href="/board" class="btn btn-lg btn-primary btn-block">Go to Board</a>
        {{/user}}
        {{^user}}
            <img class="mb-4" src="/image/bootstrap-solid.svg" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            <a class="btn btn-lg btn-primary btn-block" href="/oauth2/authorization/google">Google Sign in</a>
            <a class="btn btn-lg btn-primary btn-block" href="/oauth2/authorization/naver">Naver Sign in</a>
            <a class="btn btn-lg btn-primary btn-block" href="/oauth2/authorization/kakao">Kakao Sign in</a>
        {{/user}}

        <p class="mt-5 mb-3 text-muted">&copy; 2017-2019</p>
    </form>
</div>
{{>layout/footer}}
